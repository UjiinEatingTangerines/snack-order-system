// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// 간식 정보
model Snack {
  id          String      @id @default(cuid())
  name        String
  url         String      // 구매 링크
  imageUrl    String?
  category    String?
  price       Float?      // 가격 (네이버 또는 수기 입력)
  proposedBy  String?     // 제안자
  createdAt   DateTime    @default(now())
  deletedAt   DateTime?   // Soft delete (주문 시 설정됨)
  votes       Vote[]
  orderItems  OrderItem[]
}

// 투표
model Vote {
  id        String   @id @default(cuid())
  snackId   String
  snack     Snack    @relation(fields: [snackId], references: [id], onDelete: Cascade)
  voterName String?  // 익명 가능
  createdAt DateTime @default(now())

  @@index([snackId])
}

// 주문
model Order {
  id        String      @id @default(cuid())
  orderDate DateTime    @default(now())
  totalCost Float?
  notes     String?
  items     OrderItem[]
}

// 주문 항목
model OrderItem {
  id       String @id @default(cuid())
  orderId  String
  order    Order  @relation(fields: [orderId], references: [id], onDelete: Cascade)
  snackId  String
  snack    Snack  @relation(fields: [snackId], references: [id])
  quantity Int    @default(1)

  @@index([orderId])
  @@index([snackId])
}

// 트렌딩 간식 (외부 API)
model TrendingSnack {
  id        String   @id @default(cuid())
  name      String
  url       String
  imageUrl  String?
  source    String   // "naver", "instagram"
  rank      Int
  fetchedAt DateTime @default(now())

  @@index([source, fetchedAt])
}

// 공지사항 (외치기)
model Announcement {
  id        String   @id @default(cuid())
  message   String
  createdBy String?  // 작성자 (어드민)
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([isActive, createdAt])
}

// 제안 게시판
model Suggestion {
  id         String    @id @default(cuid())
  title      String
  content    String
  authorName String
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  comments   Comment[]

  @@index([createdAt])
}

// 댓글
model Comment {
  id              String     @id @default(cuid())
  content         String
  authorName      String
  suggestionId    String
  suggestion      Suggestion @relation(fields: [suggestionId], references: [id], onDelete: Cascade)
  parentCommentId String?
  parentComment   Comment?   @relation("CommentReplies", fields: [parentCommentId], references: [id], onDelete: Cascade)
  replies         Comment[]  @relation("CommentReplies")
  createdAt       DateTime   @default(now())
  updatedAt       DateTime   @updatedAt

  @@index([suggestionId])
  @@index([parentCommentId])
}
